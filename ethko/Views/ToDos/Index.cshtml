@model IEnumerable<ethko.Models.GetToDosViewModel>
@{
    ViewBag.Title = "To-Do Items";
}

<br />
<h2>
    @ViewBag.Title
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#NewToDoModalCenter" style="float: right">+ Add To-Do</button>
</h2>

@using (Html.BeginForm("Index", "Cases", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <!DOCTYPE html>
    <html lang="en">
    <body style="margin:20px auto">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Incomplete</a>
                        <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Complete</a>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Options</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-10">
                    <br />
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                            <table id="myTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Priority</th>
                                        <th>Due</th>
                                        <th>Case / Lead</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <a href='@Url.Action("ViewToDo", "ToDos", new { ToDoId = item.ToDoId})'>@Html.DisplayFor(modelItem => item.ToDoName)</a>
                                                </td>
                                                <td>
                                                    @if (item.PriorityName == "Critical")
                                                    {
                                                        <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.PriorityName)</span>
                                                    }
                                                    @if (item.PriorityName == "High")
                                                    {
                                                        <span class="badge badge-warning">@Html.DisplayFor(modelItem => item.PriorityName)</span>
                                                    }
                                                    @if (item.PriorityName == "Medium")
                                                    {
                                                        <span class="badge badge-info">@Html.DisplayFor(modelItem => item.PriorityName)</span>
                                                    }
                                                    @if (item.PriorityName == "Low")
                                                    {
                                                        <span class="badge badge-success">@Html.DisplayFor(modelItem => item.PriorityName)</span>
                                                    }

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DueDate)
                                                </td>
                                                <td>
                                                    1
                                                </td>
                                                <td>
                                                    1
                                                </td>
                                            </tr>
                                        }
                                    }
                                    @if (Model == null)
                                    {
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">...</div>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </body>
</html>
}