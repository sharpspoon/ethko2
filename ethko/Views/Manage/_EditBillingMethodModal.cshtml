@model ethko.BillingMethod
@using (Html.BeginForm("EditSave", "Manage", new { @class = "form-horizontal", role = "form", BillingMethodId = Model.BillingMethodId }))
{
    <h3>Billing Method: <input name="NewBillingMethod" class="form-control" type="text" placeholder=@Html.DisplayTextFor(m => m.BillingMethodName)></h3>
    @Html.AntiForgeryToken()
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> <input type="submit" name="SaveButton" value="Save" class="btn btn-success" />
}