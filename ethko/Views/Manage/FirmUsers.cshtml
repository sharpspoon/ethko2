@model IEnumerable<ethko.Models.GetFirmUsersViewModel>

<h2>Settings & Preferences</h2>
<head>
    <link rel="stylesheet" href="~/Content/svg.css">
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <h4>Select a sub category from the menu on the left</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-2">
                <div class="btn-group-vertical" role="group" aria-label="Basic example">
                    <a class="btn btn-secondary" href='@Url.Action("Index", "Manage")'>Settings Dashboard</a>
                    <a class="btn btn-secondary" href='@Url.Action("MyProfile", "Manage")'>My Profile</a>
                    <a class="btn btn-secondary" href='@Url.Action("MySettings", "Manage")'>My Settings</a>
                    <a class="btn btn-secondary" href='@Url.Action("MyNotifications", "Manage")'>My Notifications</a>
                    <a class="btn btn-primary" href='@Url.Action("FirmUsers", "Manage")'>Firm Users</a>
                    <a class="btn btn-secondary" href='@Url.Action("FirmSettings", "Manage")'>Firm Settings</a>
                    <a class="btn btn-secondary" href='@Url.Action("ClientBilling", "Manage")'>Client Billing</a>
                    <a class="btn btn-secondary" href='@Url.Action("ImportExport", "Manage")'>Import/Export</a>
                    <a class="btn btn-secondary" href='@Url.Action("CustomFields", "Manage")'>Custom Fields</a>
                    <a class="btn btn-secondary" href='@Url.Action("IntakeForms", "Manage")'>Intake Forms</a>
                    <a class="btn btn-secondary" href='@Url.Action("Workflows", "Manage")'>Workflows</a>
                    <a class="btn btn-secondary" href='@Url.Action("CaseStages", "Manage")'>Case Stages</a>
                    <a class="btn btn-secondary" href='@Url.Action("Leads", "Manage")'>Leads</a>
                </div>
            </div>
            <div class="col-10">
                <a class="btn btn-primary" href='@Url.Action("FirmUsers", "Manage")'>Active</a>&nbsp;
                <a class="btn btn-default" href='@Url.Action("FirmUsersArchive", "Manage")'>Archived</a>
                <h2>
                    Active Firm Users
                    <a class="btn btn-success" href='@Url.Action("NewFirmUser", "Manage")' style="float: right">+ Add New Firm User</a>
                </h2>
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Permissions</th>
                            <th>Active Cases</th>
                            <th>Calendar Color</th>
                            <th>Default Hourly Rate</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href='@Url.Action("ViewContact", "Contacts", new { UserName = item.UserName})'>@Html.DisplayFor(modelItem => item.Name)</a>
                                    </td>
                                    <td>
                                        <a href='@Url.Action("UserTypes", "Manage", new { UserName = item.UserName})'>@Html.DisplayFor(modelItem => item.UserType)</a>
                                    </td>
                                    <td>
                                        <a href='@Url.Action("ViewContact", "Contacts", new { UserName = item.UserName})'>@Html.DisplayFor(modelItem => item.UserName)</a>
                                    </td>
                                    <td>
                                        <a href='@Url.Action("ViewContact", "Contacts", new { UserName = item.UserName})'>@Html.DisplayFor(modelItem => item.UserName)</a>
                                    </td>
                                    <td>
                                        <a href='@Url.Action("ViewContact", "Contacts", new { UserName = item.UserName})'>@Html.DisplayFor(modelItem => item.UserName)</a>
                                    </td>
                                    <td>
                                        asdf
                                    </td>
                                    <td>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-primary" href='@Url.Action("EditPracticeArea", "Cases", new { UserName = item.UserName })'>Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                        &nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-danger" href='@Url.Action("DeleteOffice", "Manage", new { UserName = item.UserName })'>Delete</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                    </td>
                                </tr>
                            }
                        }
                        @if (Model == null)
                        {
                            <tr>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>

    <style>

        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #c4c4c4;
        }
    </style>


    <script>
        function filterText() {
            var rex = new RegExp($('#filterText').val());
            if (rex == "/all/") { clearFilter() } else {
                $('.content').hide();
                $('.content').filter(function () {
                    return rex.test($(this).text());
                }).show();
            }
        }

        function clearFilter() {
            $('.filterText').val('');
            $('.content').show();
        }
    </script>
}
