@model ethko.CaseStage
@using (Html.BeginForm("EditSave", "Manage", new { @class = "form-horizontal", role = "form", CaseStageId = Model.CaseStageId }))
{
    <h3>Case Stage: <input name="NewCaseStage" type="text" placeholder=@Html.DisplayTextFor(m => m.CaseStageName)></h3>
    @Html.AntiForgeryToken()
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> <input type="submit" name="SaveButton" value="Save" class="btn btn-success" />
}