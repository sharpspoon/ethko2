@model ethko.LeadReferralSource
@using (Html.BeginForm("DeleteConfirmed", "Manage", new { @class = "form-horizontal", role = "form", ReferralSourceId = Model.ReferralSourceId }))
{
    <font color="red">
        <h3>Really DELETE this Referral Source?  This action is irreversible!</h3>
    </font>
    <br />
    <h3><strong>@Html.DisplayFor(m => m.ReferralSourceName)</strong></h3>
    <br />
    <br />
    @Html.AntiForgeryToken()
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> <input type="submit" name="DeleteButton" value="Delete" class="btn btn-danger" />
}