@model ethko.BillingMethod
@using (Html.BeginForm("DeleteConfirmed", "Manage", new { @class = "form-horizontal", role = "form", BillingMethodId = Model.BillingMethodId }))
{
    <font color="red">
        <h3>Really DELETE this Billing Method?  This action is irreversible!</h3>
    </font>
    <br />
    <h3><strong>@Html.DisplayFor(m => m.BillingMethodName)</strong></h3>
    <br />
    <br />
    @Html.AntiForgeryToken()
    <input type="submit" name="DeleteButton" value="Delete" class="btn btn-danger" />
}