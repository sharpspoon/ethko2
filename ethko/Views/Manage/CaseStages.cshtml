@model IEnumerable<ethko.Models.GetCaseStagesViewModel>
@{
    ViewBag.Title = "Case Stages";
}

<br />
<a class="btn btn-default" href='@Url.Action("Index", "Manage")'>Back to Settings</a>&nbsp;
<br />
<br />
<h2>
    @ViewBag.Title
    <a class="btn btn-success" href='@Url.Action("NewCaseStage", "Manage")' style="float: right">+ Add Case Stage</a>
</h2>




@using (Html.BeginForm("CaseStages", "Manage", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Final Output</title>
        <meta name="description" content="Bootstrap.">

    </head>

    <body style="margin:20px auto">
        <div class="container">
            <br />
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Case Stages</th>
                        <th>Added</th>
                        <th>Edit / Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href='@Url.Action("ViewContact", "Contacts", new { ContactId = item.CaseStageId})'>@Html.DisplayFor(modelItem => item.CaseStageName)</a>
                                </td>
                                <td>
                                    <a href='@Url.Action("ContactGroups", "Contacts")'>5</a>

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsDate)
                                    by <a href='@Url.Action("ContactGroups", "Contacts")'>@Html.DisplayFor(modelItem => item.UserId)</a>
                                </td>
                                <td>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-primary" href='@Url.Action("EditPracticeArea", "Cases", new { PracticeAreaId = item.CaseStageId })'>Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-danger" href='@Url.Action("DeletePracticeArea", "Cases", new { PracticeAreaId = item.CaseStageId })'>Delete</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                </td>
                            </tr>
                        }
                    }
                    @if (Model == null)
                    {
                        <tr>
                            <td>
                                NULL
                            </td>
                            <td>
                                NULL
                            </td>
                            <td>
                                NULL
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </body>

</html>
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/app")
    <script>
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <style>

        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #c4c4c4;
        }
    </style>


    <script>
        function filterText() {
            var rex = new RegExp($('#filterText').val());
            if (rex == "/all/") { clearFilter() } else {
                $('.content').hide();
                $('.content').filter(function () {
                    return rex.test($(this).text());
                }).show();
            }
        }

        function clearFilter() {
            $('.filterText').val('');
            $('.content').show();
        }
    </script>
}
