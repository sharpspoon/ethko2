@model ethko.Models.AddOfficeViewModel
@using (Html.BeginForm("NewOffice", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.TextBoxFor(m => m.OfficeName, new { @class = "form-control", placeholder = "Office Name", required = "required" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save Office" />
    </div>
}