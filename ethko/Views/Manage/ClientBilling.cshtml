@model IEnumerable<ethko.Models.GetClientBillingViewModel>


<h2>Settings & Preferences</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Select a sub category from the menu on the left</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <a class="btn btn-default" href='@Url.Action("Index", "Manage")'>Settings Dashboard</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("MyProfile", "Manage")'>My Profile</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("MySettings", "Manage")'>My Settings</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("MyNotifications", "Manage")'>My Notifications</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("FirmUsers", "Manage")'>Firm Users</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("FirmSettings", "Manage")'>Firm Settings</a>
            <br />
            <br />
            <a class="btn btn-primary" href='@Url.Action("ClientBilling", "Manage")'>Client Billing</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("ImportExport", "Manage")'>Import/Export</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("CustomFields", "Manage")'>Custom Fields</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("IntakeForms", "Manage")'>Intake Forms</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("Workflows", "Manage")'>Workflows</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("CaseStages", "Manage")'>Case Stages</a>
            <br />
            <br />
            <a class="btn btn-default" href='@Url.Action("Leads", "Manage")'>Leads</a>
        </dt>
        <dd>
            <div class="col-md-12" align="left">
                <h2>
                    Billing Methods
                    <a class="btn btn-success" href='@Url.Action("NewBillingMethod", "Manage")' style="float: right">+ Add Billing Method</a>
                </h2>
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Billing Methods</th>
                            <th>Added</th>
                            <th>Edit / Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href='@Url.Action("ViewContact", "Contacts", new { BillingMethodId = item.BillingMethodId})'>@Html.DisplayFor(modelItem => item.BillingMethodName)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InsDate)
                                        by <a href='@Url.Action("ContactGroups", "Contacts")'>@Html.DisplayFor(modelItem => item.FstUser)</a>
                                    </td>
                                    <td>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-primary" href='@Url.Action("EditPracticeArea", "Cases", new { BillingMethodId = item.BillingMethodId })'>Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                        &nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-danger" href='@Url.Action("DeleteBillingMethod", "Manage", new { BillingMethodId = item.BillingMethodId })'>Delete</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                    </td>
                                </tr>
                            }
                        }
                        @if (Model == null)
                        {
                            <tr>
                                <td>
                                    NULL
                                </td>
                                <td>
                                    NULL
                                </td>
                                <td>
                                    NULL
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </dd>
    </dl>
</div>
