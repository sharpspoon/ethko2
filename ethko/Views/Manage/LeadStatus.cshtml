@model IEnumerable<ethko.Models.GetLeadStatusesViewModel>
<h2>Settings & Preferences</h2>
<body>
    <h4>Select a sub category from the menu on the left</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-2">
                <div class="btn-group-vertical" role="group" aria-label="Basic example">
                    <a class="btn btn-secondary" href='@Url.Action("Index", "Manage")'>Settings Dashboard</a>
                    <a class="btn btn-secondary" href='@Url.Action("MyProfile", "Manage")'>My Profile</a>
                    <a class="btn btn-secondary" href='@Url.Action("MySettings", "Manage")'>My Settings</a>
                    <a class="btn btn-secondary" href='@Url.Action("MyNotifications", "Manage")'>My Notifications</a>
                    <a class="btn btn-secondary" href='@Url.Action("FirmUsers", "Manage")'>Firm Users</a>
                    <a class="btn btn-secondary" href='@Url.Action("FirmSettings", "Manage")'>Firm Settings</a>
                    <a class="btn btn-secondary" href='@Url.Action("ClientBilling", "Manage")'>Client Billing</a>
                    <a class="btn btn-secondary" href='@Url.Action("ImportExport", "Manage")'>Import/Export</a>
                    <a class="btn btn-secondary" href='@Url.Action("CustomFields", "Manage")'>Custom Fields</a>
                    <a class="btn btn-secondary" href='@Url.Action("IntakeForms", "Manage")'>Intake Forms</a>
                    <a class="btn btn-secondary" href='@Url.Action("Workflows", "Manage")'>Workflows</a>
                    <a class="btn btn-secondary" href='@Url.Action("CaseStages", "Manage")'>Case Stages</a>
                    <a class="btn btn-primary" href='@Url.Action("Leads", "Manage")'>Leads</a>
                </div>
            </div>
            <div class="col-10">
                <h2>Lead Settings</h2>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-secondary" href='@Url.Action("Leads", "Manage")'>Referral Sources</a>
                    <a class="btn btn-primary" href='@Url.Action("LeadStatus", "Manage")'>Statuses</a>
                </div>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#NewLeadStatusModalCenter" style="float: right">+ Add Status</button>
                <br />
                <br />
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Lead Statuses</th>
                            <th>Added</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                string e = "e" + i.ToString();
                                string d = "d" + i.ToString();
                                <tr>
                                    <td>
                                        <a href='@Url.Action("EditLeadStatus", "Manage", new { LeadStatusId = item.LeadStatusId})'>@Html.DisplayFor(modelItem => item.LeadStatusName)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InsDate)
                                        by @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        <div class="edit">
                                            <a href="" data-toggle="modal" data-target='#@e'>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 8 8">
                                                    <title>Edit</title>
                                                    <path d="M6 0l-1 1 2 2 1-1-2-2zm-2 2l-4 4v2h2l4-4-2-2z" />
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="modal fade" id='@e' tabindex="-1" role="dialog" aria-labelledby="EditLeadStatusModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="NewCompanyModalCenterTitle">Edit Lead Status</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @Html.Action("EditLeadStatusModal", "Manage", new { LeadStatusId = item.LeadStatusId })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="delete">
                                            <a href="" data-toggle="modal" data-target='#@d'>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 8 8">
                                                    <title>Delete</title>
                                                    <path d="M3 0c-.55 0-1 .45-1 1h-1c-.55 0-1 .45-1 1h7c0-.55-.45-1-1-1h-1c0-.55-.45-1-1-1h-1zm-2 3v4.81c0 .11.08.19.19.19h4.63c.11 0 .19-.08.19-.19v-4.81h-1v3.5c0 .28-.22.5-.5.5s-.5-.22-.5-.5v-3.5h-1v3.5c0 .28-.22.5-.5.5s-.5-.22-.5-.5v-3.5h-1z" />
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="modal fade" id='@d' tabindex="-1" role="dialog" aria-labelledby="DeleteUserTypeModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="NewCompanyModalCenterTitle">Delete Lead Status</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @Html.Action("DeleteLeadStatusModal", "Manage", new { LeadStatusId = item.LeadStatusId })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        @if (Model == null)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>