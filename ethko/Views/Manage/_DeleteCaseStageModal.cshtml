@model ethko.CaseStage
@using (Html.BeginForm("DeleteConfirmed", "Manage", new { @class = "form-horizontal", role = "form", CaseStageId = Model.CaseStageId }))
{
    <font color="red">
        <h3>Really DELETE this Case Stage?  This action is irreversible!</h3>
    </font>
    <br />
    <h3><strong>@Html.DisplayFor(m => m.CaseStageName)</strong></h3>
    <br />
    <br />
    @Html.AntiForgeryToken()
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> <input type="submit" name="DeleteButton" value="Delete" class="btn btn-danger" />
}