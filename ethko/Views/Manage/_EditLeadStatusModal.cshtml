@model ethko.LeadStatus
@using (Html.BeginForm("EditSave", "Manage", new { @class = "form-horizontal", role = "form", LeadStatusId = Model.LeadStatusId }))
{
    <h3>Lead Status: <input name="NewLeadStatus" class="form-control" type="text" placeholder=@Html.DisplayTextFor(m => m.LeadStatusName) required></h3>
    @Html.AntiForgeryToken()
    <input type="submit" name="SaveButton" value="Save" class="btn btn-success" />
}