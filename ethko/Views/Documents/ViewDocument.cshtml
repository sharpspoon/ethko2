@model ethko.Models.GetIndividualDocumentViewModel
@{
    ViewBag.Title = "Document Details";
}
@using System.Collections.Generic;
<br />
<a class="btn btn-default" href='@Url.Action("Index", "Documents")'>Case Documents</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Firm", "Documents")'>Firm Documents</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Templates", "Documents")'>Templates</a>&nbsp;
<a class="btn btn-primary" href=#>View Document</a>&nbsp;
<br />
<br />
<h2>
    @ViewBag.Title
</h2>
@Html.AntiForgeryToken()
<hr />
<!DOCTYPE html>
<html lang="en">
<body style="margin:20px auto">
    <div class="container">
        <h2>@Html.DisplayFor(m => m.DocumentName)</h2>
        <h5>@Html.DisplayFor(m => m.CaseName)</h5>
        <div class="row">
            <div class="col-md-3">
                <div class="card border-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">
                        File Info:
                    </div>
                    <div class="card-body text-dark">
                        <h5 class="card-title">Opened</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Practice Area</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Case Stage</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Lead Attorney</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Staff</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Description</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Created</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName)</p>
                        <h5 class="card-title">Case Id</h5>
                        <p class="card-text">@Html.DisplayFor(m => m.CaseName, new { @class = "form-control", @name = "case-id", @id = "case-id" })</p>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @using (Html.BeginForm("OCR", "Documents", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" name="SaveButton" value="Run OCR" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</body>
</html>