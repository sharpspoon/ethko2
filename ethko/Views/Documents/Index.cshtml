@model IEnumerable<ethko.Models.GetDocumentsViewModel>
@{
    ViewBag.Title = "All Case Documents";
}
<br />
<a class="btn btn-primary" href='@Url.Action("Index", "Documents")'>Case Documents</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Firm", "Documents")'>Firm Documents</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("Templates", "Documents")'>Templates</a>&nbsp;
<br />
<br />
<a class="btn btn-default" href='@Url.Action("Unread", "Documents")'>Unread</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("Index", "Documents")'>All</a>
<h2>
    @ViewBag.Title
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter" style="float: right">
        + Document
    </button>
</h2>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Single Document Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
upload logic here
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Index", "Documents", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <!DOCTYPE html>
    <html lang="en">
    <body style="margin:20px auto">
        <div class="container">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Case</th>
                        <th>Uploaded By</th>
                        <th>Download</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href='@Url.Action("ViewDocument", "Documents", new { DocumentId = item.DocumentId})'>@Html.DisplayFor(modelItem => item.DocumentName)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CaseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsDate)
                                    by @Html.DisplayFor(modelItem => item.FullName)

                                </td>
                                <td>
                                    svg here
                                </td>
                                <td>
                                    asdf
                                </td>
                            </tr>
                        }
                    }
                    @if (Model == null)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </body>
</html>
}