<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" media="screen" />
    <meta charset="utf-8" />
    <title>Ethko</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        .links {
            float: right;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px; /* Margin bottom by footer height */
        }

        .footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px; /* Set the fixed height of the footer here */
            line-height: 60px; /* Vertically center the text there */
        }

        #top {
            position: fixed;
            top: 0;
            right: 0;
        }
    </style>
    <style>
        .pace {
            -webkit-pointer-events: none;
            pointer-events: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        .pace-inactive {
            display: none;
        }

        .pace .pace-progress {
            background: #29d;
            position: fixed;
            z-index: 2000;
            top: 0;
            right: 100%;
            width: 100%;
            height: 2px;
        }
    </style>
    <script src="https://kit.fontawesome.com/47b5526f1c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/af-2.3.4/b-1.6.1/b-colvis-1.6.1/b-flash-1.6.1/b-html5-1.6.1/b-print-1.6.1/fh-3.1.6/kt-2.5.1/r-2.2.3/sc-2.0.1/datatables.min.css" />
    <style>
        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #c4c4c4;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        @if (Request.IsAuthenticated)
        {
            <div id="top">
                <div class="btn-group dropleft">
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-hourglass"></i> Start Timer
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <form class="px-4 py-3">
                                <div class="clock" style="margin:2em;"></div>
                                <div class="message"></div>
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </form>
                            <div id="t" class="badge">00:00</div>
                            <button id="btn">Start</button>
                        </div>
                    </div>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-plus"></i> Add Item
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-calendar-plus"></i> Add Event</a>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-file"></i> Add Document</a>
                            <button type="button" class="dropdown-item" data-toggle="modal" data-target="#NewToDoModalCenter">
                                <i class="fas fa-check"></i>
                                Add To-Do
                            </button>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-child"></i> Add Lead</a>
                            <button type="button" class="dropdown-item" data-toggle="modal" data-target="#NewContactModalCenter">
                                <i class="fas fa-id-card"></i>
                                Add Contact
                            </button>
                            <button type="button" class="dropdown-item" data-toggle="modal" data-target="#NewCaseModalCenter">
                                <i class="fas fa-briefcase"></i>
                                Add Case
                            </button>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-envelope"></i> New Message</a>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-clock"></i> Add Time Entry</a>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-money-bill-wave"></i> Add Expense</a>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-money-check-alt"></i> Add Invoice</a>
                            <a class="dropdown-item" href='@Url.Action("Index", "Manage")'><i class="fas fa-pencil-alt"></i> Add Note</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <footer class="footer">
            <div class="container">
                <center>
                    <span class="text-muted">&copy; Copyright 2019 Ethko by <a href="https://steelcitysites.net">SteelCitySites.NET</a></span>
                </center>
            </div>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker5').datetimepicker({
                format: 'L'
            });
        });
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pace/1.0.2/pace.js"></script>
    @Scripts.Render("~/bundles/knockout")
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/timer/timer.jquery.js"></script>
    <script>
        (function () {

            $("#btn").click(function () {
                switch ($(this).html().toLowerCase()) {

                    case "start":
                        $("#t").timer({
                            action: 'start',
                            seconds: 0
                        });
                        $(this).html("Pause");
                        $("input[name='s']").attr("disabled", "disabled");
                        $("#t").addClass("badge-important");
                        break;

                    case "resume":
                        $("#t").timer('resume');
                        $(this).html("Pause")
                        $("#t").addClass("badge-important");
                        break;

                    case "pause":
                        //you can specify action via object
                        $("#t").timer({ action: 'pause' });
                        $(this).html("Resume")
                        $("#t").removeClass("badge-important");
                        break;

                }
            });

        })();
    </script>
    <script>
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/af-2.3.4/b-1.6.1/b-colvis-1.6.1/b-flash-1.6.1/b-html5-1.6.1/b-print-1.6.1/fh-3.1.6/kt-2.5.1/r-2.2.3/sc-2.0.1/datatables.min.js"></script>
</body>
</html>