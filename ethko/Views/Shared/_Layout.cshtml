    <script>
        (function () {

            $("#btn").click(function () {
                switch ($(this).html().toLowerCase()) {

                    case "start":
                        $("#t").timer({
                            action: 'start',
                            seconds: 0
                        });
                        $(this).html("Pause");
                        $("input[name='s']").attr("disabled", "disabled");
                        $("#t").addClass("badge-important");
                        break;

                    case "resume":
                        $("#t").timer('resume');
                        $(this).html("Pause")
                        $("#t").addClass("badge-important");
                        break;

                    case "pause":
                        //you can specify action via object
                        $("#t").timer({ action: 'pause' });
                        $(this).html("Resume")
                        $("#t").removeClass("badge-important");
                        break;

                }
            });

        })();
    </script>
