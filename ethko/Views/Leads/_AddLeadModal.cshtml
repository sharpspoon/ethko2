@model ethko.Models.AddLeadViewModel
<h5>Potential New Client</h5>
@using (Html.BeginForm("NewLeadModal", "Leads", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label>Lead Name</label>
        <div class="form-row">
            <div class="input-group col-md-5">
                @Html.TextBoxFor(m => m.FName, new { @class = "form-control", placeholder = "First Name", required = "required" })
            </div>
            <div class="input-group col-md-2">
                @Html.TextBoxFor(m => m.MName, new { @class = "form-control", placeholder = "M" })
            </div>
            <div class="input-group col-md-5">
                @Html.TextBoxFor(m => m.LName, new { @class = "form-control", placeholder = "Last Name", required = "required" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@ethko.com", type = "email", required = "required" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Cell Phone</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control", placeholder = "555-555-5555" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Referral Source</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("ReferralSources", (IEnumerable<SelectListItem>)ViewData["DBReferralSources"], new { @class = "custom-select" })
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-dismiss="modal" data-target="#NewLeadReferralSourceModalCenter">New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Referred By Contact</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("Contacts", (IEnumerable<SelectListItem>)ViewData["DBContacts"], new { @class = "custom-select" })
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-dismiss="modal" data-target="#NewContactModalCenter">New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Referred By Company</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("Companies", (IEnumerable<SelectListItem>)ViewData["DBCompanies"], new { @class = "custom-select" })
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-dismiss="modal" data-target="#NewCompanyModalCenter">New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Lead Details</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextAreaFor(m => m.LeadNotes, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <br />
    <h5>Potential New Case</h5>

    <div class="form-group">
        <label>Date Added</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="far fa-calendar-alt"></i></span>
                </div>
                <input type="text" class="form-control datetimepicker-input" id="addleaddatetimepicker" name="dateadded" data-toggle="datetimepicker" data-target="#addleaddatetimepicker" required/>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Status</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("LeadStatus", (IEnumerable<SelectListItem>)ViewData["DBLeadStatuses"], new { @class = "custom-select" })
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-dismiss="modal" data-target="#NewLeadStatusModalCenter">New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Practice Area</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("PracticeAreas", (IEnumerable<SelectListItem>)ViewData["DBPracticeAreas"], new { @class = "custom-select" })
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-dismiss="modal" data-target="#NewPracticeAreaModalCenter">New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Potential Value of Case</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-dollar-sign"></i></span>
                </div>
                @Html.TextBoxFor(m => m.PotentialValue, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Assign To</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("LeadAssignTo", (IEnumerable<SelectListItem>)ViewData["DBAspNetUsers"], new { @class = "custom-select", @id = "contact", @name = "contact" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Potential Case Description</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextAreaFor(m => m.CaseNotes, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="input-group col-md-12">
                <input type="submit" class="btn btn-success" value="Save Lead" />
            </div>
        </div>
    </div>
}