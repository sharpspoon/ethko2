@model ethko.Contact
@using (Html.BeginForm("EditContact", "Contacts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <form>
        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Name</label>
            <div class="col">
                <input type="text" class="form-control" id="colFormLabel" placeholder="First Name" value="@Html.DisplayFor(modelItem => Model.FName)">
            </div>
            <div class="col">
                <input type="text" class="form-control" id="colFormLabel" placeholder="M" value="@Html.DisplayFor(modelItem => Model.MName)">
            </div>
            <div class="col">
                <input type="text" class="form-control" id="colFormLabel" placeholder="Last Name" value="@Html.DisplayFor(modelItem => Model.LName)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="colFormLabel" placeholder="Email" value="@Html.DisplayFor(modelItem => Model.Email)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Contact Group</label>
            <div class="col-sm-10">
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Enable Client Portal</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline1">No</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline2">Yes</label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Cell Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="colFormLabel" placeholder="(555) 555-5555" value="@Html.DisplayFor(modelItem => Model.CellPhone)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Work Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="colFormLabel" placeholder="(555) 555-5555" value="@Html.DisplayFor(modelItem => Model.WorkPhone)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Home Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="colFormLabel" placeholder="(555) 555-5555" value="@Html.DisplayFor(modelItem => Model.HomePhone)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Address</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="1234 Main St" value="@Html.DisplayFor(modelItem => Model.Address)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Address 2</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="Apartment, studio, or floor" value="@Html.DisplayFor(modelItem => Model.Address2)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">City</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="Apartment, studio, or floor" value="@Html.DisplayFor(modelItem => Model.City)">
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">State</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="Apartment, studio, or floor" @Html.DisplayFor(modelItem => Model.State)>
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Zip</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="Apartment, studio, or floor" value="@Html.DisplayFor(modelItem => Model.Zip)">
            </div>
        </div>

        <p>
            @*<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                Link with href
            </a>*@
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Add More Information
            </button>
        </p>
        <div class="collapse" id="collapseExample">
            <div class="card card-body">
                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Birthday</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Birthday" value="@Html.DisplayFor(modelItem => Model.Birthday)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Company</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Company" value="@Html.DisplayFor(modelItem => Model.CompanyId)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Job Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Job Title" value="@Html.DisplayFor(modelItem => Model.JobTitle)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">DL#, State</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Birthday" value="@Html.DisplayFor(modelItem => Model.Birthday)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Website</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Birthday" value="@Html.DisplayFor(modelItem => Model.Website)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Fax</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Birthday" value="@Html.DisplayFor(modelItem => Model.Fax)">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">Notes</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="colFormLabel" placeholder="Birthday" value="@Html.DisplayFor(modelItem => Model.Notes)">
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
        &nbsp;<input type="submit" class="btn btn-primary" value="Save Contact" style="float: right" /> &nbsp;
        &nbsp;<input type="submit" class="btn btn-secondary" value="Save & Add Case" style="float: right" />&nbsp;
    </form>
    <br />
}















