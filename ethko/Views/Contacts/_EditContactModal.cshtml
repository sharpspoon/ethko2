                                <br />
                                <br />
                                Work:&nbsp;&nbsp;@Html.EditorFor(m => m.WorkPhone) @Html.ValidationMessageFor(m => m.WorkPhone)
                                <br />
                                <br />
                                Cell:&nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(m => m.CellPhone) @Html.ValidationMessageFor(m => m.CellPhone)
                                <br />
                                <br />
                                Fax:&nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(m => m.Fax) @Html.ValidationMessageFor(m => m.Fax)
                            </div>
