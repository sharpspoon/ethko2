                                <br />
                                <br />
                                Group:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(m => m.ContactGroupId) @Html.ValidationMessageFor(m => m.ContactGroupId)
                                <br />
                                <br />
                                Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(m => m.Email) @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <br />
                            <div class="well">
                                <h4>Portal Access</h4>
                            </div>
                        </div>
