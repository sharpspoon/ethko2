@model ethko.Models.AddContactIndividualViewModel
@using (Html.BeginForm("NewContactModal", "Contacts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label>Name</label>
        <div class="form-row">
            <div class="input-group col-md-5">
                @Html.TextBoxFor(m => m.FName, new { @class = "form-control", placeholder = "First Name", required = "required" })
            </div>
            <div class="input-group col-md-2">
                @Html.TextBoxFor(m => m.MName, new { @class = "form-control", placeholder = "M" })
            </div>
            <div class="input-group col-md-5">
                @Html.TextBoxFor(m => m.LName, new { @class = "form-control", placeholder = "Last Name", required = "required" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@ethko.com", type = "email", required = "required" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Contact Group</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.DropDownList("ContactGroups", (IEnumerable<SelectListItem>)ViewData["DBContactGroups"], new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Enable Client Portal</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                <select class="form-control" id="sel1">
                    <option>No</option>
                    <option>Yes</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Cell Phone</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control", placeholder = "555-555-5555" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Work Phone</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.WorkPhone, new { @class = "form-control", placeholder = "555-555-5555" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Home Phone</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.HomePhone, new { @class = "form-control", placeholder = "555-555-5555" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "123 Main Street" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Address 2</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", placeholder = "Apartment B" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>City</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Birmingham" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>State</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "AL" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Zip</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control", placeholder = "55555" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Country</label>
        <div class="form-row">
            <div class="input-group col-md-12">
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "USA" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save Contact" />
    </div>
}