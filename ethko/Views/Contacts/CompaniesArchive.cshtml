@model IEnumerable<ethko.Company>
@{
    ViewBag.Title = "Archived Companies";
}

<br />
<a class="btn btn-default" href='@Url.Action("ContactsArchive", "Contacts")'>Contacts</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("CompaniesArchive", "Contacts")'>Companies</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("ContactGroups", "Contacts")'>Contact Groups</a>&nbsp;
<br />
<br />
<a class="btn btn-default" href='@Url.Action("Companies", "Contacts")'>Active</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("CompaniesArchive", "Contacts")'>Archived</a>
<h2>
    @ViewBag.Title
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#NewCompanyModalCenter" style="float: right">+ Add Company</button>
</h2>

@Html.AntiForgeryToken()
<hr />
<!DOCTYPE html>
<html lang="en">
<body style="margin:20px auto">
    <div class="container">
        <br />
        <br />
        <table id="myTable" class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Cases</th>
                    <th>Contacts</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Added</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        string e = "e" + i.ToString();
                        string d = "d" + i.ToString();
                        <tr>
                            <td>
                                <a href='@Url.Action("ViewContact", "Contacts", new { ContactId = item.Name})'>@Html.DisplayFor(modelItem => item.Name)</a>
                            </td>
                            <td>
                                5
                            </td>
                            <td>
                                3
                            </td>
                            <td>
                                <a href='@Url.Action("ContactGroups", "Contacts")'>@Html.DisplayFor(modelItem => item.Email)</a>

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsDate)
                                by <a href='@Url.Action("ContactGroups", "Contacts")'>@Html.DisplayFor(modelItem => item.FstUser)</a>


                            </td>
                            <td>
                                <a class="btn btn-primary" href="#individual" rel="modal:open" style="float: right">Edit Contact</a>

                            </td>
                        </tr>
                    }
                }
                @if (Model == null)
                {
                    <tr>
                        <td></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>