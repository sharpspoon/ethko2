@model ethko.Models.AddPracticeAreaViewModel
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Scripts/bootstrap-3.4.0.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<br />
<a class="btn btn-default" href='@Url.Action("Index", "Cases")'>Cases</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("PracticeAreas", "Cases")'>Practice Areas</a>&nbsp;
<a class="btn btn-default" href='@Url.Action("CaseInsights", "Cases")'>Case Insights</a>&nbsp;
<a class="btn btn-primary" href='@Url.Action("New", "Contacts")'>Add Practice Area</a>&nbsp;


<br />
<h1>Add Practice Area</h1>
    <p>
        <div class="col-md-12">
            @using (Html.BeginForm("NewPracticeArea", "Cases", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-4" align="left">
                        @Html.TextBoxFor(m => m.PracticeAreaName, new { @class = "form-control", placeholder = "Practice Area" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-default" href='@Url.Action("PracticeAreas", "Cases")'>Cancel</a>
                        <input type="submit" class="btn btn-success" value="Save Practice Area" />
                    </div>
                </div>
            }
        </div>
    </p>