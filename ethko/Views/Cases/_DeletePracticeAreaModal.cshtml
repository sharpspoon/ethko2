@model ethko.PracticeArea
@using (Html.BeginForm("DeleteConfirmed", "Cases", new { @class = "form-horizontal", role = "form", PracticeAreaId = Model.PracticeAreaId }))
{
    <font color="red">
        <h3>Really DELETE this Practice Area?  This action is irreversible!</h3>
    </font>
    <br />
    <h3>Practice Area: @Html.DisplayFor(m => m.PracticeAreaName)</h3>
    @Html.AntiForgeryToken()
    <input type="submit" name="DeleteButton" value="Delete" class="btn btn-danger" />
}